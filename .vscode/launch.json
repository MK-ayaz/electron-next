{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Electron: Main (Launch)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/electron",
      "args": ["."],
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "runtimeArgs": ["--nolazy", "--inspect=9229"],
      "windows": {
        "program": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "env": {
        "NODE_ENV": "development",
        "ELECTRON_ENABLE_LOGGING": "1"
      }
    },
    {
      "name": "Electron: Renderer (Attach)",
      "type": "pwa-chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}",
      "timeout": 30000
    },
    {
      "name": "Next.js (Server Inspect)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/next",
      "runtimeArgs": ["dev"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    }
  ]
}


